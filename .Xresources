!--- Terminal settings
!
!termName rxvt-unicode
!modifier: 			alt, meta, hyper, super, mod1, mod2, mod3, mod4, mod5;
URxvt.scrollTtyOutput:		false
URxvt.scrollTtyKeypress:	true
URxvt.scrollWithBuffer:		true
URxvt.loginShell:		true
URxvt.saveLines:		3000

URxvt.font: 			xft:lemon:pixelsize=10:antialias=false
URxvt.boldFont: 		xft:lemon:pixelsize=10:antialias=false
*.geometry:			75x14

URxvt*.thickness: 0.1
URxvt*keysym.Shift-Control-V:perl:clipboard:paste
URxvt*iso14755: false
URxvt*perl-ext-common:default,clipboard
URxvt*font:xft:terminus:pixelsize=12
URxvt*boldFont:xft:terminus:pixelsize=13

URxvt*letterSpace: 0

!
!-- Look and feel
!
!! Scroll inside of subscreen, less etc.
URxvt.secondaryWheel:		true
URxvt.cursorUnderline: 		false
URxvt.font: xft:	 	monospace-9
URxvt.transparent: 		true
URxvt.scrollBar_right:		true
URxvt*scrollBar: 		false
URxvt*scrollBar_floating: true

URxvt.scrollstyle: 		plain
URxvt.internalBorder: 		10
URxvt.borderless: 		true
URxvt.shading: 			20
URxvt.depth:			30
URxvt.urgentOnBell: 		true
!
!-- Perl stuff: URL matching etc.
!
!! These characters are used as delimiters for double-click word selection
!! by default, but may be overriden
URxvt.cutchars: 		`\"\'&()*,;<=>?@[]^{|}
URxvt.perl-ext-common:		default,matcher
URxvt.urlLauncher: 		/usr/bin/firefox
URxvt.underlineURLs: 		true
URxvt.matcher.button:	 	2

!
!-- Colors
!!
URxvt.foreground: 		#AAAAAA
URxvt.background: 		#000000
URxvt.colorBD: 			#ffffff
URxvt.underlineColor: 		#75507B
!cursorColor:			#e0e080
!!		scrollbar color
!scrollColor 			#010203
!!		the color of zone scrollbar get through
!throughColor: 			#8080f0
!highlightColor: 		#f0f0f0
!highlightTextColor: 		#000000


!---------------------------------------------------
! Font Rendering
!---------------------------------------------------
Xft.dpi: 			96
Xft.antialias: 			1
Xft.rgba: 			rgb
Xft.autohint: 			0
Xft.lcdfilter: 			lcddefault
Xft.hinting: 			1
Xft.hintstyle: 			hintfull

